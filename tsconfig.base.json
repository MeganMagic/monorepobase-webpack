{
  "compilerOptions": {
    /* Compile */
    "skipLibCheck": true,
    "types": ["react", "node"],

    /* Linting */
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,

    /* Environment */
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Modules*/
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true
  }
}
